<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="72dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    app:cardElevation="2dp"
                                    app:cardBackgroundColor="@color/colorItemForSearchBackground"
                                    app:cardUseCompatPadding="false"
                                    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_for_search_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_search_title_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Dota-govno"/>

            <TextView
                android:id="@+id/item_for_search_link_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/colorSecondaryText"
                android:text="https://vk.com/im?sel=16799102"
                android:maxEms="30"
                android:ellipsize="end"
                android:linksClickable="false"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
